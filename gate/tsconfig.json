{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
